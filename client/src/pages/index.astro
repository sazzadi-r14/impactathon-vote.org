---
import Container from "@/components/Container.astro";
import Layout from "../layouts/App.astro";
import AuthPopupModal from "@/components/auth/AuthPopup.jsx";
import AuthModal from "@/components/auth/AuthModal";
---

<Layout title="Edit Your Voter Information" footer={false}>
	<AuthPopupModal client:only />
	
	<Container class="flex flex-col justify-center items-center h-screen">
		<AuthModal 
			redirectPath={"/profile"}
			joinButtonText="Sign in"
			description="Hello"
			subDescription="Hello again"
			confirmation={undefined}
			client:load
		/>
	</Container>
</Layout>
