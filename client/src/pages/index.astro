---
import UserInfoForm from '../components/UserInfoForm.jsx';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Edit Your Voter Information">
  <main class="flex flex-col items-center justify-center min-h-screen p-6 bg-gray-100 text-gray-800">
    <div class="w-full max-w-2xl bg-white rounded-lg shadow-md p-6 space-y-6">
      <h1 class="text-xl font-bold text-center">Voter Information Portal</h1>
      <form id="emailVerificationForm" class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Enter your email to verify your identity:</label>
          <input type="email" id="email" name="email" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" />
          <button type="submit" class="mt-4 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">Verify Email</button>
        </div>
      </form>

      <!-- PII Fields -->
      <div id="piiFields" class="hidden space-y-4">
        <!-- Add all the PII fields as shown below -->

        <div id="firstNameField">
          <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
          <div class="flex mt-1">
            <input type="text" id="firstName" name="firstName" required class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" value="John" disabled />
            <button type="button" onclick="editField('firstName')" class="ml-2 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-blue-600 hover:bg-blue-50">Edit</button>
            <button type="button" onclick="deleteField('firstNameField')" class="ml-2 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-red-600 hover:bg-red-50">Delete</button>
          </div>
        </div>

        <!-- Repeat the structure above for last name, address, etc. -->

        <!-- Add a button to delete all PII -->
        <div>
          <button type="button" onclick="deleteAllPII()" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700">Delete All Information</button>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  document.getElementById('emailVerificationForm').addEventListener('submit', function(event) {
    event.preventDefault();
    // Placeholder for API call to verify email and fetch PII
    document.getElementById('piiFields').classList.remove('hidden');
  });

  function editField(fieldId) {
    const field = document.getElementById(fieldId);
    field.disabled = false;
    field.focus();
  }

  function deleteField(fieldContainerId) {
    const fieldContainer = document.getElementById(fieldContainerId);
    fieldContainer.style.display = 'none';
    // Placeholder for API call to delete the field data
  }

  function deleteAllPII() {
    // Placeholder for API call to delete all PII
    alert('All PII will be deleted!'); // Replace with actual deletion logic
  }
</script>

