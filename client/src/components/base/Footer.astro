---
import Container from "../Container.astro";
---

<footer class="py-12 pb-40">
	<Container>
		<div
			class="mt-12 flex flex-wrap justify-center items-center text-xl text-zinc-900 dark:text-white"
		>
			<span class="text-zinc-600 dark:text-zinc-300">
				Contact Us&nbsp&nbsp;
			</span>
			<a class="font-medium" href="mailto:info@vote.org">info@vote.org</a>
		</div>

		<ul
			role="list"
			class="flex flex-wrap items-center justify-center gap-4 py-2 text-zinc-600 dark:text-zinc-400 sm:gap-8"
		>
			<li role="listitem">
				<a
					href="/about"
					class="duration-300 hover:text-primary dark:hover:text-white"
				>
					About
				</a>
			</li>
			<li role="listitem">
				<a
					href="/faq"
					class="duration-300 hover:text-primary dark:hover:text-white"
				>
					FAQ
				</a>
			</li>
			<li role="listitem">
				<a
					href="/privacy"
					class="duration-300 hover:text-primary dark:hover:text-white"
				>
					Privacy
				</a>
			</li>
			<li role="listitem">
				<a
					href="/terms"
					class="duration-300 hover:text-primary dark:hover:text-white"
				>
					Terms of Service
